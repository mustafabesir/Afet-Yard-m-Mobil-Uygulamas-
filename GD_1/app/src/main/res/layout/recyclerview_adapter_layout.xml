<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kullanıcı"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/klnctxt" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durum"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/drmtxt"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konum"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/knmtxt"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Afet"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/afttxt"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Mesajı..:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/msjtxt"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sağlık Durumu..:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/sagliktxt"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>